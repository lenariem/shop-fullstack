<h2>Edit {{course.title}} <span>&#9998;</span></h2>

{{#if editError}}
<p class="alert">{{editError}}</p>
{{/if}}

<form action="/courses/edit" method="POST" class="course-form">

  <div class="input-field">
    <input id="title" name="title" type="text" class="validate" required value="{{course.title}}">
    <label for="title">Course name</label>
    <span class="helper-text" data-error="Please, enter a course name"></span>
  </div>

  <div class="input-field">
    <input id="price" name="price" type="number" class="validate" required min="1" value="{{course.price}}">
    <label for="price">Price</label>
    <span class="helper-text" data-error="Please, enter price"></span>
  </div>

  <div class="input-field">
    <input id="img" name="img" type="text" class="validate" required value="{{course.img}}">
    <label for="img">Course image URL</label>
    <span class="helper-text" data-error="Please, enter course URL"></span>
  </div>

  <div class="input-field">
    <input id="theme" name="theme" type="text" class="validate" required value="{{course.theme}}">
    <label for="theme">Theme</label>
    <span class="helper-text" data-error="Please, enter course theme"></span>
  </div>

  <input type="hidden" name="id" value="{{course._id}}">
  <input type="hidden" name="_csrf" value="{{csrf}}">

  <button type="submit" class="btn btn-primary">EDIT</button>
</form>

<form action="/courses/remove" method = "POST">
  <input type="hidden" name="id" value="{{course._id}}">
  <input type="hidden" name="_csrf" value="{{csrf}}">
  <button class="btn red">DELETE</button>
</form>


